#!/bin/bash -e

PATH=/bin/:/usr/bin:$PATH

source $OPENSHIFT_CARTRIDGE_SDK_BASH

JBOSSAS_DEPLOYMENT_DIR=${OPENSHIFT_JBOSSAS6_DIR}/jboss/server/default/deploy
JBOSSAS_CONFIG_DIR=${OPENSHIFT_JBOSSAS6_DIR}/jboss/server/default/conf
JBOSSAS_LIB_DIR=${OPENSHIFT_JBOSSAS6_DIR}/jboss/server/default/lib

function start {
    $OPENSHIFT_JBOSSAS6_DIR/jboss/bin/run.sh -b $OPENSHIFT_JBOSSAS6_IP -Djboss.server.log.dir=$OPENSHIFT_JBOSSAS6_DIR/logs/ -Djboss.boot.server.log.dir=$OPENSHIFT_JBOSSAS6_DIR/logs/ &
}

function stop {
    $OPENSHIFT_JBOSSAS6_DIR/jboss/bin/shutdown.sh --host=$OPENSHIFT_JBOSSAS6_IP
}

function restart {
    stop
    sleep 5
    start
}

function deploy() {
  client_debug "Deploying to JBoss"

  # if repo/deploy has any files in it, copy them to $JBOSSAS_DEPLOYMENTS_DIR
  #   deleting is not supported yet.
  if [ "$(ls ${OPENSHIFT_REPO_DIR}/deploy 2>/dev/null)" ]; then
    cp ${OPENSHIFT_REPO_DIR}deploy/* $JBOSSAS_DEPLOYMENT_DIR
  fi

  # if repo/conf has any files in it, copy them to $JBOSSAS_CONF_DIR
  #   deleting is not supported yet.
  if [ "$(ls ${OPENSHIFT_REPO_DIR}/conf 2>/dev/null)" ]; then
    cp ${OPENSHIFT_REPO_DIR}conf/* $JBOSSAS_CONF_DIR
  fi

  # if repo/lib has any files in it, copy them to $JBOSSAS_LIB_DIR
  #   deleting is not supported yet.
  if [ "$(ls ${OPENSHIFT_REPO_DIR}/lib 2>/dev/null)" ]; then
    cp ${OPENSHIFT_REPO_DIR}lib/* $JBOSSAS_LIB_DIR
  fi
}

# Clean up any log files
function tidy() {
  client_message "Emptying log dir: $OPENSHIFT_JBOSSAS6_LOG_DIR"
  shopt -s dotglob
  rm -rf $OPENSHIFT_JBOSSAS6_LOG_DIR/*
}

function catchall {
    client_debug "$1: not yet implemented"
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  deploy)      deploy ;;
  reload)      restart ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
